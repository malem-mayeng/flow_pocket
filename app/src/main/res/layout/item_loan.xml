<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardElevation="2dp"
    app:cardCornerRadius="8dp"
    app:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <!-- Checkbox -->
        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/loan_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp" />

        <!-- Loan Details -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Amount -->
            <TextView
                android:id="@+id/loan_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â‚¹5,000"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#212121" />

            <!-- Person Name -->
            <TextView
                android:id="@+id/loan_person"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="From: John Doe"
                android:textSize="14sp"
                android:textColor="#757575"
                android:layout_marginTop="4dp" />

            <!-- Date -->
            <TextView
                android:id="@+id/loan_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date: Oct 5, 2025"
                android:textSize="12sp"
                android:textColor="#9E9E9E"
                android:layout_marginTop="2dp" />

            <!-- Due Date (Optional) -->
            <TextView
                android:id="@+id/loan_due_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Due: Oct 15, 2025"
                android:textSize="12sp"
                android:textColor="#FF9800"
                android:layout_marginTop="2dp"
                android:visibility="gone" />

            <!-- Notes (Optional) -->
            <TextView
                android:id="@+id/loan_notes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notes: Emergency loan"
                android:textSize="12sp"
                android:textColor="#616161"
                android:textStyle="italic"
                android:layout_marginTop="4dp"
                android:visibility="gone" />

            <!-- Settled Info (Only visible when settled) -->
            <TextView
                android:id="@+id/loan_settled_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Paid: Oct 10, 2025"
                android:textSize="12sp"
                android:textColor="#4CAF50"
                android:layout_marginTop="2dp"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
