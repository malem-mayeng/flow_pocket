<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FlowPocket" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_grey_500</item>
        <item name="colorPrimaryVariant">@color/dark_grey_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Eye-friendly backgrounds -->
        <item name="android:windowBackground">#F5F5F5</item>
        <item name="android:colorBackground">#F5F5F5</item>
        <item name="colorSurface">#FAFAFA</item>
        <item name="colorOnSurface">#212121</item>
    </style>

    <!-- Custom dialog theme with backdrop dimming -->
    <style name="CustomDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.9</item>
    </style>

    <!-- NumberPicker style with transparency and modern look -->
    <style name="NumberPickerStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#1E293B</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:divider">@drawable/number_picker_divider</item>
        <item name="android:dividerHeight">2dp</item>
        <item name="android:descendantFocusability">blocksDescendants</item>
        <item name="android:fadingEdge">vertical</item>
        <item name="android:fadingEdgeLength">32dp</item>
        <item name="android:scrollbarStyle">outsideInset</item>
        <item name="android:layout_marginHorizontal">8dp</item>
    </style>

    <!-- Enhanced dialog theme for month year picker -->
    <style name="MonthYearPickerDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundFloating">@android:color/transparent</item>
        <item name="android:layout_margin">16dp</item>
    </style>
</resources>